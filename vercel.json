{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://pikamed-panel.keremkk.com.tr"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    }
  ],
  "env": {
    "BOT_TOKEN": "@bot_token",
    "GEMINI_API_KEY": "@gemini_api_key",
    "MAILJET_API_KEY": "@mailjet_api_key",
    "MAILJET_SECRET_KEY": "@mailjet_secret_key",
    "PIKAMED_FIREBASE_PRIVATE_KEY_ID": "@pikamed_firebase_private_key_id",
    "PIKAMED_FIREBASE_PRIVATE_KEY": "@pikamed_firebase_private_key",
    "PIKAMED_FIREBASE_CLIENT_EMAIL": "@pikamed_firebase_client_email",
    "PIKAMED_FIREBASE_CLIENT_ID": "@pikamed_firebase_client_id",
    "PIKAMED_FIREBASE_CLIENT_X509_CERT_URL": "@pikamed_firebase_client_x509_cert_url"
  }
}
